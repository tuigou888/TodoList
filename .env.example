# 环境变量配置示例
# 复制此文件为 .env 并填写实际配置

# Flask 密钥（生产环境必须修改，建议使用随机字符串）
SECRET_KEY=your-very-long-and-random-secret-key-change-this-in-production

# 邮件服务配置
# 是否启用邮件服务（True/False）
MAIL_ENABLED=True

# SMTP 服务器配置
# QQ邮箱示例
MAIL_SERVER=smtp.qq.com
MAIL_PORT=587
MAIL_USE_TLS=True
MAIL_USERNAME=your-email@qq.com
MAIL_PASSWORD=your-smtp-auth-code

# 发件人邮箱
MAIL_DEFAULT_SENDER=your-email@example.com

# 提醒时间（0-23，0表示凌晨0点）
MAIL_REMINDER_HOUR=0

# 跨域配置（可选）
CORS_ENABLED=True
ALLOWED_ORIGINS=http://localhost:3000,http://localhost:5144

